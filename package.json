{
  "name": "polymer-analyzer",
  "version": "2.0.0-alpha.1",
  "description": "Static analysis for Web Components",
  "homepage": "https://github.com/Polymer/polymer-analyzer",
  "bugs": "https://github.com/Polymer/polymer-analyzer/issues",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/polymer-analyzer.git"
  },
  "main": "lib/analyzer.js",
  "typings": "lib/analyzer.d.ts",
  "files": [
    "LICENSE",
    "lib/",
    "custom_typings/"
  ],
  "scripts": {
    "clean": "mkdir -p lib/ && rm -rf lib/",
    "compile": "tsc",
    "build": "mkdir -p lib/ && cp -r src/test lib/ && npm run compile && typson schema src/serialized-analysis.ts SerializedAnalysis > lib/analysis.schema.json && node build-tools/fixup-schema.js",
    "release": "npm run compile",
    "build:watch": "watch 'npm run build' ./src",
    "lint": "gulp lint",
    "test": "npm run clean && npm run build && npm run lint && mocha",
    "quicktest": "npm run build && mocha",
    "test:watch": "watchy -w src/ -- npm run quicktest",
    "format": "find src test | grep '\\.js$\\|\\.ts$' | xargs ./node_modules/.bin/clang-format --style=file -i"
  },
  "devDependencies": {
    "@types/chai": "^3.4.29",
    "@types/mocha": "^2.2.28",
    "chai": "^2.2.0",
    "clang-format": "^1.0.42",
    "depcheck": "^0.6.3",
    "fs-extra": "^0.30.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "gulp-mocha": "^2.2.0",
    "gulp-tslint": "^5.0.0",
    "gulp-typescript": "^2.13.4",
    "gulp-typings": "^1.3.6",
    "jsdoc-to-markdown": "^1.0.3",
    "merge-stream": "^1.0.0",
    "mocha": "^2.2.4",
    "run-sequence": "^1.2.0",
    "sinon": "^1.17.4",
    "temp": "^0.8.3",
    "tslint": "^3.10.2",
    "typescript": "^2.0.0",
    "typings": "^1.3.1",
    "typson": "^0.6.0",
    "watchy": "^0.6.6"
  },
  "dependencies": {
    "@types/acorn": "^1.0.28",
    "@types/node": "^4.0.30",
    "@types/parse5": "0.0.27",
    "acorn": "^3.2.0",
    "doctrine": "^0.7.0",
    "dom5": "^1.1.0",
    "escodegen": "^1.7.0",
    "estraverse": "^3.1.0",
    "parse5": "^2.1.5",
    "shady-css-parser": "0.0.8"
  }
}
